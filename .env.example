# Environment
ENVIRONMENT=development

# Server Configuration
SERVER_PORT=8080
SERVER_READ_TIMEOUT=10s
SERVER_WRITE_TIMEOUT=10s
SERVER_IDLE_TIMEOUT=120s
SERVER_RATE_LIMIT=100
SERVER_SHUTDOWN_TIMEOUT=30s

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=search_engine
DB_SSLMODE=disable
DB_MAX_CONNECTIONS=25
DB_MAX_IDLE_TIME=5m
DB_MAX_LIFETIME=1h

# Cache Configuration
CACHE_TYPE=memory
CACHE_HOST=localhost
CACHE_PORT=6379
CACHE_PASSWORD=
CACHE_DB=0
CACHE_TTL=5m
CACHE_MAX_SIZE=1000

# Provider Configuration
PROVIDER1_URL=http://localhost:3001/api/content
PROVIDER1_RATE_LIMIT=60
PROVIDER1_TIMEOUT=5s
PROVIDER1_RETRY_COUNT=3
PROVIDER1_RETRY_DELAY=1s

PROVIDER2_URL=http://localhost:3002/api/content
PROVIDER2_RATE_LIMIT=60
PROVIDER2_TIMEOUT=5s
PROVIDER2_RETRY_COUNT=3
PROVIDER2_RETRY_DELAY=1s

# Logging Configuration
LOG_LEVEL=info
LOG_OUTPUT=stdout

# Authentication Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRATION=24h
